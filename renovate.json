{
    "extends": [
        ":semanticPrefixFixDepsChoreOthers",
        ":ignoreModulesAndTests",
        ":disableRateLimiting",
        ":rebaseStalePrs",
        "group:monorepos",
        "group:recommended"
    ],
    "assignees": [
        "internalsystemerror"
    ],
    "automerge": true,
    "baseBranches": [
        "main"
    ],
    "enabledManagers": [
        "composer"
    ],
    "prCreation": "immediate",
    "rangeStrategy": "bump",
    "rollbackPrs": true,
    "semanticCommits": "enabled",
    "separateMajorMinor": true,
    "separateMinorPatch": true,
    "timezone": "Europe/London",
    "unpublishSafe": true,
    "packageRules": [
        {
            "depTypeList": [
                "require"
            ],
            "semanticCommitType": "fix"
        },
        {
            "groupName": "phpstan packages",
            "groupSlug": "phpstan",
            "packagePatterns": [
                "^phpstan/"
            ]
        },
        {
            "updateTypes": [
                "major"
            ],
            "automerge": false
        }
    ]
}
